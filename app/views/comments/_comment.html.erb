<div class=comment-wall>
  <% if comment.user_id == current_user.id%>
    <%= link_to edit_user_path(current_user) do %>
      <%= image_tag @profile.avatar.url(:thumb), class: "status-image" %>
    <%end%>
    <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }  %>
  <div class="status text-left">
    <h6 class="comment-name"><strong><%=link_to @profile.full_name, user_path(comment.user_id)%></strong></h6>
  <% else %>
    <%= link_to user_path(comment.user_id) do %>
      <%= image_tag find_commentor(comment.user_id).avatar.url(:thumb), class: "status-image" %>
    <%end%>
    <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }  %>
    <div class="status text-left">
      <h6 class="comment-name"><strong><%=link_to @commentor.full_name, user_path(comment.user_id)%></strong></h6>
  <% end %>
      <p class="comment-datetime"><%=clean_date(comment.created_at)%></p>
    </div>
        <p class="comment-content text-left"><%=comment.content%></p>
</div>