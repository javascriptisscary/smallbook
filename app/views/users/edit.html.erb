<h1 class="text-center">Edit Your Profile</h1>
<div class="container">
  <div class="row">
    <div class="col-md-5 text-center">
      <%= image_tag @user.avatar.url(:medium), class:"img-responsive profile-image" %>
      <%= form_for @user,  html: { multipart: true } do |form| %>
        <%= form.file_field :avatar %>
        <%= form.submit 'Submit Image', class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-7">
      <%= form_for @user do |f| %>
        <div class="field form-group">
          <%= f.label :first_name, class: "control-label"%>
          <%= f.text_field :first_name, class: "form-control"%>
        </div>
        <div class="field form-group">
          <%= f.label :last_name, class: "control-label"%>
          <%= f.text_field :last_name, class: "form-control"%>
        </div>
        <div class="field form-group">
          <%= f.label :email, class: "control-label"%>
          <%= f.text_field :email, class: "form-control"%>
        </div>
        <div class="field form-group">
          <%= f.label :webpage, class: "control-label"%>
          <%= f.url_field :webpage, class: "form-control"%>
        </div>
        <div class="field form-group">
          <%= f.label :birthday, class: "control-label"%>
          <%= f.date_field :birthday, id: "datepicker", class: "form-control"%>
        </div>
        <div class="field form-group">
          <%= f.label :zip, class: "control-label"%>
          <%= f.text_field :zip, class: "form-control"%>
        </div>
        
        <div class="field form-group">
        <%= f.submit 'Update Profile', class: "btn btn-success" %>
        </div>
      <% end %>
    
    </div>



</div>
</div>